<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <TextView
        android:id="@+id/agentTransactionDetailListItemInfoWithBarcodeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#657082"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/agentTransactionDetailListItemInfoWithBarcodeImage"
        app:layout_constraintEnd_toStartOf="@id/agentTransactionDetailListItemInfoWithBarcodeValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tanggal:" />

    <TextView
        android:id="@+id/agentTransactionDetailListItemInfoWithBarcodeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#313131"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/agentTransactionDetailListItemInfoWithBarcodeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/agentTransactionDetailListItemInfoWithBarcodeLabel"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="18-Juli-2019" />

    <View
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:background="#657082"
        app:layout_constraintBottom_toBottomOf="@id/agentTransactionDetailListItemInfoWithBarcodeImage"
        app:layout_constraintEnd_toEndOf="@id/agentTransactionDetailListItemInfoWithBarcodeImage"
        app:layout_constraintStart_toStartOf="@id/agentTransactionDetailListItemInfoWithBarcodeImage"
        app:layout_constraintTop_toTopOf="@id/agentTransactionDetailListItemInfoWithBarcodeImage" />

    <ImageView
        android:id="@+id/agentTransactionDetailListItemInfoWithBarcodeImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agentTransactionDetailListItemInfoWithBarcodeValue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D8DBE1"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>