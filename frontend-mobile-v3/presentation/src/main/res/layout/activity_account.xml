<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="id.mikaapp.mika.agent.account.AccountActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:elevation="@null">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                app:contentInsetStart="@null"
                app:elevation="@null">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/account"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBar"
            android:padding="20dp">

        <TextView
                android:id="@+id/label_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:text="@string/pengguna" />

        <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_username"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/separator_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_username"
                android:layout_marginBottom="15dp"
                android:background="@color/lightGrey" />

        <TextView
                android:id="@+id/label_outlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_4"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:text="@string/outlet" />

        <TextView
                android:id="@+id/text_outlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_outlet"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/separator_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_outlet"
                android:layout_marginBottom="15dp"
                android:background="@color/lightGrey" />

        <TextView
                android:id="@+id/label_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator_1"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:text="@string/alamat" />

        <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_address"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/separator_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_address"
                android:layout_marginBottom="15dp"
                android:background="@color/lightGrey" />

        <TextView
                android:id="@+id/label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator_2"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:text="@string/alamat_email" />

        <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_email"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/separator_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_email"
                android:layout_marginBottom="15dp"
                android:background="@color/lightGrey" />

        <TextView
                android:id="@+id/label_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator_3"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:text="@string/nama_merchant" />

        <TextView
                android:id="@+id/text_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_merchant_name"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/separator_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_merchant_name"
                android:layout_marginBottom="15dp"
                android:background="@color/lightGrey" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/loading_overlay"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@color/colorBlackOverlay"
            android:visibility="gone">

        <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>