<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBg</item>
        <item name="android:textViewStyle">@style/BaseTextView</item>
        <item name="android:editTextStyle">@style/BaseEditText</item>

        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorEdgeEffect">@android:color/transparent</item>

        <item name="android:dialogTheme">@style/CustomDialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Startup" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_startup</item>
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/blue_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/custom_family</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DarkButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/chooserDialogBg</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/custom_family</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/custom_family</item>
        <item name="android:textSize">@dimen/font_size_reguler</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/custom_family</item>
    </style>

    <style name="BaseTextInputEditText">
        <item name="android:colorControlNormal">@color/lightGrey</item>
    </style>

    <style name="CalculatorNumberButton" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/custom_family</item>
    </style>

    <style name="CalculatorBigSymbolButton" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/custom_family</item>
    </style>

    <style name="CalculatorSymbolButton" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/custom_family</item>
    </style>

    <style name="CalculatorPayButton" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/custom_family</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/grey_text_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:fontFamily">@font/custom_family</item>
    </style>

    <style name="PasswordEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/password_text_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:fontFamily">@font/custom_family</item>
    </style>

    <style name="PinEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_pin_bg</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/custom_family</item>
        <item name="android:inputType">none</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PinNumberButton" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/custom_family</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:itemBackground">@color/chooserDialogBg</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PopupMenuStyleSelected" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:itemBackground">@color/chooserDialogHighlight</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyDatePickerTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="SegmentedButton" parent="RadioButton">
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
